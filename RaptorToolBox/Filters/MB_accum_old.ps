#version 120

uniform sampler2D color;
uniform sampler2D accum;
uniform vec4 percentage;
void main(void)
{
	vec4 c = texture2D(color,gl_TexCoord[0].xy);
	vec4 a = texture2D(accum,gl_TexCoord[0].xy);
	gl_FragColor = mix(c,a,percentage);
}

