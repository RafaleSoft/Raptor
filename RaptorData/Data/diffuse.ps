#version 440

uniform	sampler2D diffuseMap;

layout(location = 1) in vec4 g_TexCoord;
layout(location = 0) out vec4 o_Color;

void main (void)
{
	o_Color = texture(diffuseMap,vec2(g_TexCoord.st));
}
