#version 440

uniform	sampler2D diffuseMap;

in vec4 d_Color;
in vec4 s_Color;
in vec4 o_texCoord;

layout(location = 0) out vec4 o_Color;

void main (void)
{
	o_Color = s_Color + d_Color * texture(diffuseMap,vec2(o_texCoord.st));
}
